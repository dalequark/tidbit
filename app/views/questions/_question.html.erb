<div class="question">

  <div class="headline">
    <%= question.title %>
  </div>
  <div class="text">
    <%= question.content %>
  </div>
  
  <div class="meta">
    <span><%= link_to 'Show', question %></span> &middot;
    <span><%= link_to 'Edit', edit_question_path(question) %></span> &middot;
    <span><%= link_to 'Destroy', question, method: :delete, data: { confirm: 'Are you sure?' } %></span>
  </div>

  <div class="bio_unit">
    <div class="gravatar"><%= gravatar_for(question.user) %></div>
    <div class="name"><%= question.user.name %></div>
    <div class="bio"><%= Faker::Lorem.sentence([*4..10].sample) %></div>
  </div>
</div>
