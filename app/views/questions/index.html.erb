<% provide(:title, 'Questions') %>

<div class="content">
  <h1>Latest Questions</h1>

  <%= link_to 'Add a Question', '#', class: "pure-button pure-button-primary top-action-button" %>

  <%= render 'questions/form' %>

  <% @questions.each do |question| %>
    <%= render question %>
  <% end %>

  <%= will_paginate %>
</div>

