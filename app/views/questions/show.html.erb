<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @question.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @question.user_id %>
</p>

<p>
  <strong>Answers:</strong>
  <br>
  <% @question.answers.each do |answer| %>
    <tr>
      <td>Title: </td>
      <td><%= answer.title %></td>
    </tr>
     <tr>
        <td>Content: </td>
        <td><%= answer.content %></td>
     </tr>
      <br>
  <%end%>
</p>

<%= link_to 'Answer', new_answer_path(@question) %> |
<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
