<%= form_for @answer, html: {class: "pure-form pure-form-stacked"} do |f| %>
    <fieldset>

      <% if @answer.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h2>

            <ul>
              <% @answer.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="pure-control-group">
        <%= f.hidden_pure-control-group :question_id, value: @answer.question_id %>
      </div>

      <div class="pure-control-group">
        <%= f.label :title %><br>
        <%= f.text_pure-control-group :title %>
      </div>

      <div class="pure-control-group">
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </div>

      <div class="pure-control-group">
        <%= f.label :user_id %><br>
        <%= f.number_pure-control-group :user_id %>
      </div>

      <div class="pure-control-group">
        <div class="pure-controls">
          <%= f.submit class: "pure-button pure-button-primary" %>
        </div>
      </div>

    </fieldset>
<% end %>


